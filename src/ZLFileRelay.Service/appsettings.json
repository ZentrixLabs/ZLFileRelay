{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ZLFileRelay": {
    "Branding": {
      "CompanyName": "Your Company",
      "ProductName": "ZL File Relay",
      "SiteName": "Default Site",
      "SupportEmail": "support@example.com"
    },
    "Paths": {
      "UploadDirectory": "C:\\FileRelay\\uploads",
      "TransferDirectory": "C:\\FileRelay\\uploads\\transfer",
      "LogDirectory": "C:\\FileRelay\\logs",
      "ConfigDirectory": "C:\\ProgramData\\ZLFileRelay",
      "TempDirectory": "C:\\FileRelay\\temp"
    },
    "Logging": {
      "RetentionDays": 30,
      "MaxFileSizeMB": 100,
      "EnableEventLog": true,
      "EnableConsole": true
    },
    "Service": {
      "Enabled": true,
      "ServiceName": "ZLFileRelay",
      "DisplayName": "ZL File Relay Service",
      "Description": "Automated file transfer service",
      "WatchDirectory": "C:\\FileRelay\\uploads\\transfer",
      "TransferMethod": "ssh",
      "RetryAttempts": 3,
      "RetryDelaySeconds": 30,
      "RetryBackoffMultiplier": 2.0,
      "MaxConcurrentTransfers": 5,
      "FileFilter": "*.*",
      "DeleteAfterTransfer": false,
      "ArchiveAfterTransfer": true,
      "ArchiveDirectory": "C:\\FileRelay\\archive",
      "VerifyTransfer": true,
      "ConflictResolution": "Append",
      "CheckDiskSpace": true,
      "MinimumFreeDiskSpaceBytes": 1073741824,
      "FileStabilitySeconds": 5,
      "ProcessingIntervalSeconds": 10,
      "MaxQueueSize": 10000,
      "IncludeSubdirectories": true
    },
    "Transfer": {
      "Ssh": {
        "Host": "192.168.1.100",
        "Port": 22,
        "Username": "fileuser",
        "AuthMethod": "PublicKey",
        "PrivateKeyPath": "C:\\ProgramData\\ZLFileRelay\\ssh_private_key",
        "DestinationPath": "/opt/transfer",
        "CreateDestinationDirectory": true,
        "PreserveTimestamps": true,
        "ConnectionTimeout": 30,
        "OperationTimeout": 300,
        "TransferTimeout": 300,
        "KeepAliveInterval": 30,
        "Compression": true,
        "StrictHostKeyChecking": true
      },
      "Smb": {
        "Server": "fileserver",
        "SharePath": "transfer",
        "UseCredentials": true,
        "Timeout": 300,
        "BufferSize": 8192
      }
    },
    "Security": {
      "EncryptCredentials": true,
      "RequireSecureTransfer": true,
      "EnableAuditLog": true,
      "AuditLogPath": "C:\\FileRelay\\logs\\audit.log",
      "SensitiveDataMasking": true,
      "AllowExecutableFiles": true,
      "AllowHiddenFiles": false,
      "MaxUploadSizeBytes": 5368709120
    }
  }
}
