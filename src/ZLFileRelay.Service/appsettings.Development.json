{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information",
      "ZLFileRelay": "Debug"
    }
  },
  "ZLFileRelay": {
    "Branding": {
      "CompanyName": "Test Company",
      "ProductName": "ZL File Relay [DEV]",
      "SiteName": "Development Site"
    },
    "Paths": {
      "LogDirectory": "C:\\FileRelay\\logs",
      "ConfigDirectory": "C:\\ProgramData\\ZLFileRelay"
    },
    "Logging": {
      "EnableConsole": true,
      "EnableEventLog": false
    },
    "Service": {
      "WatchDirectory": "C:\\FileRelay\\uploads\\transfer",
      "TransferMethod": "ssh",
      "RetryAttempts": 2,
      "RetryDelaySeconds": 5,
      "ProcessingIntervalSeconds": 5,
      "FileStabilitySeconds": 2,
      "DeleteAfterTransfer": false,
      "ArchiveAfterTransfer": false,
      "VerifyTransfer": false
    },
    "Transfer": {
      "Ssh": {
        "Host": "localhost",
        "Port": 22,
        "Username": "testuser",
        "PrivateKeyPath": "C:\\ProgramData\\ZLFileRelay\\test_key",
        "DestinationPath": "/tmp/transfer",
        "ConnectionTimeout": 10,
        "TransferTimeout": 30,
        "Compression": false
      }
    },
    "Security": {
      "AllowExecutableFiles": true,
      "AllowHiddenFiles": false,
      "MaxUploadSizeBytes": 10485760
    }
  }
}
