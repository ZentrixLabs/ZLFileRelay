<Application x:Class="ZLFileRelay.ConfigTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ZLFileRelay.ConfigTool"
             xmlns:converters="clr-namespace:ZLFileRelay.ConfigTool.Converters"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Request theme can be: Light, Dark, or Default (follows system) -->
                <ui:ThemeResources RequestedTheme="Light" />
                <ui:XamlControlsResources />
                
                <!-- Custom Button Styles -->
                <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters:HealthStatusToColorConverter x:Key="HealthColorConverter"/>
            <converters:HealthStatusToIconConverter x:Key="HealthIconConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
