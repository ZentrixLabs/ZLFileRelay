<Window x:Class="ZLFileRelay.ConfigTool.Dialogs.CredentialDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrator Credentials Required"
        Width="450"
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Administrator Credentials Required" 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      Foreground="#2C3E50"/>
            <TextBlock Text="This operation requires administrator privileges. Please enter administrator credentials."
                      TextWrapping="Wrap"
                      Foreground="#7F8C8D"
                      Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <Label Content="Username:" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameTextBox"
                    Margin="0,5,0,15"
                    Padding="8"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Password:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox"
                        Margin="0,5,0,15"
                        Padding="8"
                        PasswordChanged="PasswordBox_OnPasswordChanged"/>

            <TextBlock x:Name="ErrorText"
                      Foreground="Red"
                      TextWrapping="Wrap"
                      Visibility="Collapsed"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="OK"
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"
                   Click="OkButton_Click"
                   IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancel"
                   Width="100"
                   Height="35"
                   Click="CancelButton_Click"
                   IsCancel="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#95A5A6"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

