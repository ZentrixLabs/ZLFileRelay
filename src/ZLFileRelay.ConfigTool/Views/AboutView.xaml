<UserControl x:Class="ZLFileRelay.ConfigTool.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40,30,40,40" MaxWidth="700" HorizontalAlignment="Center">
            
            <!-- Logo Section with Charcoal Background -->
            <Border Background="#FF3C3C3C" 
                    CornerRadius="8" 
                    Padding="40"
                    Margin="0,0,0,30"
                    BorderBrush="#FF555555"
                    BorderThickness="1">
                <StackPanel HorizontalAlignment="Center">
                    <!-- ZL Logo -->
                    <Image Source="/Assets/ZLLogo.png" 
                           Width="220" 
                           Height="220"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                    
                    <!-- ZentrixLabs Branding Placeholder -->
                    <TextBlock FontSize="32" 
                               FontWeight="Light"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5">
                        <Run Text="Z E N T R I X L A B S"/>
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" 
                                            BlurRadius="3" 
                                            ShadowDepth="2" 
                                            Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <TextBlock Text="Open Source Enterprise Solutions" 
                               FontSize="14" 
                               FontStyle="Italic"
                               Foreground="#FFB0B0B0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Product Title -->
            <TextBlock Text="ZL File Relay" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       Margin="0,0,0,5"/>
            
            <TextBlock Text="Configuration Tool" 
                       FontSize="16" 
                       TextAlignment="Center" 
                       Foreground="Gray"
                       Margin="0,0,0,25"/>
            
            <!-- Version Information -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                    CornerRadius="6" 
                    Padding="20"
                    Margin="0,0,0,20">
                <ui:SimpleStackPanel Spacing="12">
                    <TextBlock Text="Version Information" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Version}" />
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Build Date:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding BuildDate}" Margin="0,8,0,0"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Framework:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text=".NET 8.0" Margin="0,8,0,0"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="License:" FontWeight="SemiBold" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Enterprise" Margin="0,8,0,0"/>
                    </Grid>
                </ui:SimpleStackPanel>
            </Border>
            
            <!-- Description -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                    CornerRadius="6" 
                    Padding="20"
                    Margin="0,0,0,20">
                <ui:SimpleStackPanel Spacing="10">
                    <TextBlock Text="About" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    
                    <TextBlock TextWrapping="Wrap" 
                               LineHeight="22">
                        ZL File Relay is a comprehensive enterprise file transfer solution that combines automated 
                        file watching, secure transfer protocols (SSH/SCP, SMB), and a user-friendly web portal 
                        with Windows Authentication. This configuration tool provides unified management for all 
                        components and supports remote server administration.
                    </TextBlock>
                </ui:SimpleStackPanel>
            </Border>
            
            <!-- Features -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                    CornerRadius="6" 
                    Padding="20"
                    Margin="0,0,0,20">
                <ui:SimpleStackPanel Spacing="10">
                    <TextBlock Text="Key Features" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <fa:IconImage Icon="{x:Static fa:IconChar.Check}" 
                                        Foreground="Green" 
                                        Width="16" 
                                        Height="16" 
                                        Margin="0,0,10,0"/>
                            <TextBlock Text="Automated file transfer with SSH/SCP and SMB support" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <fa:IconImage Icon="{x:Static fa:IconChar.Check}" 
                                        Foreground="Green" 
                                        Width="16" 
                                        Height="16" 
                                        Margin="0,0,10,0"/>
                            <TextBlock Text="Web portal with Windows Authentication" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <fa:IconImage Icon="{x:Static fa:IconChar.Check}" 
                                        Foreground="Green" 
                                        Width="16" 
                                        Height="16" 
                                        Margin="0,0,10,0"/>
                            <TextBlock Text="Remote server configuration via WinRM" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <fa:IconImage Icon="{x:Static fa:IconChar.Check}" 
                                        Foreground="Green" 
                                        Width="16" 
                                        Height="16" 
                                        Margin="0,0,10,0"/>
                            <TextBlock Text="Enterprise security with DPAPI and SSH key authentication" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <fa:IconImage Icon="{x:Static fa:IconChar.Check}" 
                                        Foreground="Green" 
                                        Width="16" 
                                        Height="16" 
                                        Margin="0,0,10,0"/>
                            <TextBlock Text="Comprehensive logging and audit trails" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </ui:SimpleStackPanel>
            </Border>
            
            <!-- Links Section -->
            <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" 
                    CornerRadius="6" 
                    Padding="20"
                    Margin="0,0,0,20">
                <ui:SimpleStackPanel Spacing="15">
                    <TextBlock Text="Resources" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    
                    <!-- GitHub Link -->
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="{x:Static fa:IconChar.Github}" 
                                    IconFont="Brands"
                                    Width="20" 
                                    Height="20" 
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center">
                            <Hyperlink NavigateUri="https://github.com/ZentrixLabs/ZLFileRelay" 
                                     RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="View on GitHub"/>
                            </Hyperlink>
                            <Run Text=" - Source code, documentation, and issue tracking" Foreground="Gray"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Website Link -->
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="{x:Static fa:IconChar.Globe}" 
                                    Width="20" 
                                    Height="20" 
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center">
                            <Hyperlink NavigateUri="https://zentrixlabs.net" 
                                     RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="ZentrixLabs Website"/>
                            </Hyperlink>
                            <Run Text=" - More products and solutions" Foreground="Gray"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Support Email -->
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="{x:Static fa:IconChar.Envelope}" 
                                    Width="20" 
                                    Height="20" 
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center">
                            <Hyperlink NavigateUri="mailto:support@zentrixlabs.net" 
                                     RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="support@zentrixlabs.net"/>
                            </Hyperlink>
                            <Run Text=" - Technical support and inquiries" Foreground="Gray"/>
                        </TextBlock>
                    </StackPanel>
                </ui:SimpleStackPanel>
            </Border>
            
            <!-- Copyright Footer -->
            <TextBlock TextAlignment="Center" 
                       Foreground="Gray" 
                       FontSize="12"
                       Margin="0,20,0,0">
                <Run Text="© 2025 ZentrixLabs. All rights reserved."/>
                <LineBreak/>
                <Run Text="Built with ❤️ for enterprise file transfer"/>
            </TextBlock>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>

