<UserControl x:Class="ZLFileRelay.ConfigTool.Views.FileTransferView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:converters="clr-namespace:ZLFileRelay.ConfigTool.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="900">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToAllowedDeniedConverter x:Key="BoolToAllowedDeniedConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- Page Header -->
            <TextBlock Text="File Transfer Configuration" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Configure how files are transferred and what security policies apply" 
                       FontSize="14" 
                       Foreground="Gray"
                       Margin="0,0,0,20"/>

            <!-- Transfer Method Selection -->
            <ui:SimpleStackPanel Spacing="10" Margin="0,0,0,20">
                <TextBlock Text="Transfer Method" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <RadioButton Content="SSH/SCP - Secure Shell File Transfer" 
                             IsChecked="{Binding IsSshMethod}" 
                             GroupName="TransferMethod"
                             Margin="0,5"/>
                <TextBlock Text="Use SSH key authentication to transfer files to a remote Linux/Unix server" 
                           Margin="25,0,0,10" Foreground="Gray" FontSize="11"/>
                
                <RadioButton Content="SMB/CIFS - Network Share" 
                             IsChecked="{Binding IsSmbMethod}" 
                             GroupName="TransferMethod"
                             Margin="0,5"/>
                <TextBlock Text="Copy files to a Windows network share (requires SMB credentials)" 
                           Margin="25,0,0,0" Foreground="Gray" FontSize="11"/>
            </ui:SimpleStackPanel>

            <!-- Directories (Always Visible) -->
            <ui:SimpleStackPanel Spacing="10" Margin="0,0,0,20">
                <TextBlock Text="Directories" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <!-- Directory Workflow Explanation -->
                <Border Background="#F0F8FF" BorderBrush="#B0C4DE" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8">
                            üìÅ Directory Workflow
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#424242">
                            <Bold>1. Web Portal Upload:</Bold> Users upload files to the main upload directory via the web interface.<LineBreak/>
                            <Bold>2. Service Transfer:</Bold> The service monitors the Watch Directory for files to transfer to remote locations.<LineBreak/>
                            <Bold>3. Archive:</Bold> After successful transfer, files are moved to the Archive Directory for storage.
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,5,0,0">
                            üí° Tip: Typically, Watch Directory is a subdirectory of the main upload directory (e.g., uploads/transfer).
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Watch Directory:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding WatchDirectory, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,5,5"
                             ToolTip="The directory where the service monitors for new files to transfer (typically uploads/transfer)"/>
                    <Button Grid.Row="0" Grid.Column="2" 
                            Command="{Binding BrowseWatchDirectoryCommand}"
                            Content="Browse..." 
                            Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Archive Directory:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding ArchiveDirectory, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Directory where files are moved after successful transfer (if archive option is enabled)"/>
                    <Button Grid.Row="1" Grid.Column="2" 
                            Command="{Binding BrowseArchiveDirectoryCommand}"
                            Content="Browse..."/>
                </Grid>
            </ui:SimpleStackPanel>

            <!-- SSH Configuration (Visible when SSH selected) -->
            <ui:SimpleStackPanel Spacing="10" 
                                 Margin="0,0,0,20"
                                 Visibility="{Binding IsSshMethod, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <TextBlock Text="SSH Configuration" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <!-- Contextual Help -->
                <Expander Header="‚ÑπÔ∏è How do I set up SSH?" Margin="0,0,0,10" IsExpanded="False">
                    <Border Background="#F0F8FF" BorderBrush="#B0C4DE" BorderThickness="1" CornerRadius="4" Padding="15">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,10">
                                Quick Start Guide: SSH Key Authentication
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                                <Bold>Step 1:</Bold> Click "Generate Key Pair" below to create a new SSH key pair.
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                                <Bold>Step 2:</Bold> Copy the public key and add it to your remote server's ~/.ssh/authorized_keys file.
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                                <Bold>Step 3:</Bold> Enter your SSH host, port, username, and destination path below.
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                <Bold>Step 4:</Bold> Click "Test SSH Connection" to verify everything works.
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="11">
                                üí° Tip: ED25519 keys provide strong security and are recommended for SSH authentication.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Expander>

                <!-- SSH Connection Settings -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Host:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding SshHost, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,5"
                             ToolTip="Hostname or IP address of the remote SSH server"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Port:" VerticalAlignment="Center"/>
                    <ui:NumberBox Grid.Row="1" Grid.Column="1" 
                                  Value="{Binding SshPort, Mode=TwoWay}" 
                                  Minimum="1" Maximum="65535" 
                                  Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Username:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             Text="{Binding SshUsername, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,5"
                             ToolTip="Username for SSH authentication on the remote server"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Destination Path:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             Text="{Binding SshDestinationPath, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Full path on the remote server where files will be transferred"/>
                </Grid>

                <!-- SSH Key Management -->
                <TextBlock Text="SSH Key Authentication" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,10,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Private Key Path:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding SshKeyPath, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,5,0"
                             ToolTip="Path to the SSH private key file for authentication"/>
                    <Button Grid.Row="0" Grid.Column="2" 
                            Command="{Binding BrowseSshKeyCommand}"
                            Content="Browse..."/>
                    
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">
                        <Button Command="{Binding GenerateSshKeyCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Padding="15,8"
                                Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE192;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Generate Key Pair" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ViewPublicKeyCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="15,8"
                                Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE890;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="View Public Key" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding CopyPublicKeyCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C8;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Copy to Clipboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Connection Test -->
                <TextBlock Text="Connection Test" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,10,0,10"/>
                <Button Command="{Binding TestSshConnectionCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,10"
                        Height="38"
                        HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA46;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Test SSH Connection" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Padding="10"
                        MinHeight="100"
                        Margin="0,10,0,0">
                    <TextBlock Text="{Binding SshTestResult}" 
                               TextWrapping="Wrap"
                               FontFamily="Consolas"
                               FontSize="12"/>
                </Border>
            </ui:SimpleStackPanel>

            <!-- SMB Configuration (Visible when SMB selected) -->
            <ui:SimpleStackPanel Spacing="10" 
                                 Margin="0,0,0,20"
                                 Visibility="{Binding IsSmbMethod, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <TextBlock Text="SMB Configuration" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Server/Share:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding SmbServer, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,5"
                             ToolTip="Network path to the SMB share (e.g., \\server\share or \\192.168.1.100\files)"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Share Path:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding SmbSharePath, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Path within the share where files will be transferred"/>
                    
                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <TextBlock Text="Credentials are managed in the Service tab" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0"/>
                        <Button Command="{Binding TestSmbConnectionCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA46;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Test Connection" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </ui:SimpleStackPanel>

            <!-- File Handling Options (Always Visible) -->
            <ui:SimpleStackPanel Spacing="10" Margin="0,0,0,20">
                <TextBlock Text="File Handling" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <CheckBox Content="Archive files after successful transfer (recommended)"
                          IsChecked="{Binding ArchiveAfterTransfer}"/>
                <CheckBox Content="Delete files after successful transfer (not recommended, use archive instead)"
                          IsChecked="{Binding DeleteAfterTransfer}"
                          Foreground="DarkOrange"/>
                <CheckBox Content="Verify file integrity after transfer"
                          IsChecked="{Binding VerifyTransfer}"/>
            </ui:SimpleStackPanel>

            <!-- Security Policies (Always Visible) -->
            <ui:SimpleStackPanel Spacing="15" Margin="0,0,0,20">
                <TextBlock Text="Security Policies" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <!-- Warning Banner -->
                <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2" CornerRadius="4" Padding="15">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold" Foreground="#E65100" Margin="0,0,0,10">
                            ‚ö†Ô∏è Important Security Notice
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#424242" FontSize="12">
                            These settings control what types of files can be transferred. 
                            Changes directly impact system security. For DMZ deployments, 
                            keep executable files blocked unless specifically required.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Allow Executable Files -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <CheckBox Content="Allow Executable Files"
                                  IsChecked="{Binding AllowExecutableFiles}"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   Margin="20,0,0,5">
                            When enabled, allows transferring executable files (.exe, .dll, .bat, .cmd, .ps1, etc.)
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="11" 
                                   Foreground="#D32F2F"
                                   Margin="20,0,0,0">
                            ‚ö†Ô∏è Security Risk: Only enable if your workflow requires executable file transfers.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Allow Hidden Files -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <CheckBox Content="Allow Hidden Files"
                                  IsChecked="{Binding AllowHiddenFiles}"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   Margin="20,0,0,0">
                            When enabled, allows processing files with the hidden attribute set.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Maximum File Size -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Maximum File Size:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,15,0"
                                   FontWeight="SemiBold"/>
                        
                        <Slider Grid.Row="0" Grid.Column="1" 
                                Value="{Binding MaxFileSizeGB, Mode=TwoWay}"
                                Minimum="1" 
                                Maximum="100" 
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>
                        
                        <StackPanel Grid.Row="0" Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding MaxFileSizeGB, StringFormat={}{0:F0}}"
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text=" GB" 
                                       FontSize="14" 
                                       Foreground="Gray"
                                       VerticalAlignment="Center"
                                       Margin="3,0,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                   TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   Margin="0,10,0,0">
                            Maximum size for individual file transfers. Larger files will be rejected.
                        </TextBlock>

                        <!-- Quick Size Presets -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                    Orientation="Horizontal" 
                                    Margin="0,15,0,0">
                            <TextBlock Text="Quick Presets:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"
                                       FontSize="12"
                                       Foreground="Gray"/>
                            <Button Content="1 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="1"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"
                                    Margin="0,0,5,0"/>
                            <Button Content="5 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="5"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"
                                    Margin="0,0,5,0"/>
                            <Button Content="10 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="10"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"
                                    Margin="0,0,5,0"/>
                            <Button Content="20 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="20"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"
                                    Margin="0,0,5,0"/>
                            <Button Content="50 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="50"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Current Security Summary -->
                <Border Background="#F5F5F5" 
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Current Security Posture" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Executable Files:" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding AllowExecutableFiles, Converter={StaticResource BoolToAllowedDeniedConverter}}" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Hidden Files:" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding AllowHiddenFiles, Converter={StaticResource BoolToAllowedDeniedConverter}}" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Max File Size:" FontSize="12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" FontSize="12" FontWeight="SemiBold">
                                <Run Text="{Binding MaxFileSizeGB, StringFormat={}{0:F0}}"/>
                                <Run Text=" GB"/>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Border>
            </ui:SimpleStackPanel>

            <!-- Save Button -->
            <Button Command="{Binding SaveConfigurationCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Padding="20,10"
                    Height="38"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Save Configuration" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <TextBlock Text="{Binding StatusMessage}" 
                       Margin="0,10,0,0" 
                       Foreground="Green"
                       TextWrapping="Wrap"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>

