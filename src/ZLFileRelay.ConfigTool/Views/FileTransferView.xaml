<UserControl x:Class="ZLFileRelay.ConfigTool.Views.FileTransferView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:converters="clr-namespace:ZLFileRelay.ConfigTool.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="900">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToAllowedDeniedConverter x:Key="BoolToAllowedDeniedConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- Page Header -->
            <TextBlock Text="File Transfer Configuration" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Configure how files are transferred and what security policies apply" 
                       FontSize="14" 
                       Foreground="Gray"
                       Margin="0,0,0,20"/>

            <!-- Transfer Method Selection -->
            <ui:SimpleStackPanel Spacing="10" Margin="0,0,0,20">
                <TextBlock Text="Transfer Method" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <RadioButton Content="SSH/SCP - Secure Shell File Transfer" 
                             IsChecked="{Binding IsSshMethod}" 
                             GroupName="TransferMethod"
                             Margin="0,5"/>
                <TextBlock Text="Use SSH key authentication to transfer files to a remote Linux/Unix server" 
                           Margin="25,0,0,10" Foreground="Gray" FontSize="11"/>
                
                <RadioButton Content="SMB/CIFS - Network Share" 
                             IsChecked="{Binding IsSmbMethod}" 
                             GroupName="TransferMethod"
                             Margin="0,5"/>
                <TextBlock Text="Copy files to a Windows network share (requires SMB credentials)" 
                           Margin="25,0,0,0" Foreground="Gray" FontSize="11"/>
            </ui:SimpleStackPanel>

            <!-- Directories (Always Visible) -->
            <ui:SimpleStackPanel Spacing="10" Margin="0,0,0,20">
                <TextBlock Text="Directories" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <!-- Directory Workflow Explanation -->
                <Border Background="#F0F8FF" BorderBrush="#B0C4DE" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8">
                            üìÅ Directory Workflow
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#424242">
                            <Bold>1. Web Portal Upload:</Bold> Users upload files to the main upload directory via the web interface.<LineBreak/>
                            <Bold>2. Service Transfer:</Bold> The service monitors the Watch Directory for files to transfer to remote locations.<LineBreak/>
                            <Bold>3. Archive:</Bold> After successful transfer, files are moved to the Archive Directory for storage.
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,5,0,0">
                            üí° Tip: Typically, Watch Directory is a subdirectory of the main upload directory (e.g., uploads/transfer).
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Watch Directory:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding WatchDirectory, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,5,5"
                             ToolTip="The directory where the service monitors for new files to transfer (typically uploads/transfer)"/>
                    <Button Grid.Row="0" Grid.Column="2" 
                            Command="{Binding BrowseWatchDirectoryCommand}"
                            Content="Browse..." 
                            Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Archive Directory:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding ArchiveDirectory, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Directory where files are moved after successful transfer (if archive option is enabled)"/>
                    <Button Grid.Row="1" Grid.Column="2" 
                            Command="{Binding BrowseArchiveDirectoryCommand}"
                            Content="Browse..."/>
                </Grid>
            </ui:SimpleStackPanel>

            <!-- SSH Configuration (Visible when SSH selected) -->
            <ui:SimpleStackPanel Spacing="10" 
                                 Margin="0,0,0,20"
                                 Visibility="{Binding IsSshMethod, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <TextBlock Text="SSH Configuration" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <!-- Contextual Help -->
                <Expander Header="‚ÑπÔ∏è How do I set up SSH?" Margin="0,0,0,10" IsExpanded="False">
                    <Border Background="#F0F8FF" BorderBrush="#B0C4DE" BorderThickness="1" CornerRadius="4" Padding="15">
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,10">
                                Complete SSH Setup Guide
                            </TextBlock>
                            
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,8" FontWeight="SemiBold">
                                Part A: Prepare the Service Account (One-time setup)
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" FontSize="12">
                                <Bold>1.</Bold> Login to this server as the service account (e.g., <Run FontFamily="Consolas">svc_filetransfer</Run>) at least once
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="20,0,0,5" FontSize="11" Foreground="Gray">
                                Example: <Run FontFamily="Consolas">runas /user:DOMAIN\svc_filetransfer cmd</Run><LineBreak/>
                                This creates the user profile (C:\Users\svc_filetransfer) where SSH keys will be stored.
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" FontSize="12">
                                <Bold>2.</Bold> Grant the service account read access to the private key folder
                            </TextBlock>
                            
                            <Border BorderBrush="#90CAF9" BorderThickness="1" Background="#E3F2FD" CornerRadius="3" Padding="10" Margin="0,8,0,8">
                                <TextBlock TextWrapping="Wrap" FontSize="11">
                                    ‚ö†Ô∏è The Windows Service runs as the service account and needs permission to read the private key file!
                                </TextBlock>
                            </Border>
                            
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,8" FontWeight="SemiBold">
                                Part B: Generate and Deploy SSH Keys
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" FontSize="12">
                                <Bold>1.</Bold> Click "Generate Key Pair" below to create SSH keys (ED25519 format recommended)
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" FontSize="12">
                                <Bold>2.</Bold> Click "View Public Key" and copy the entire public key text
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" FontSize="12">
                                <Bold>3.</Bold> On the REMOTE server, append the public key to <Run FontFamily="Consolas">~/.ssh/authorized_keys</Run>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="20,0,0,5" FontSize="11" Foreground="Gray">
                                Linux: <Run FontFamily="Consolas">echo "public-key-here" >> ~/.ssh/authorized_keys</Run><LineBreak/>
                                Windows: Add to <Run FontFamily="Consolas">C:\Users\username\.ssh\authorized_keys</Run>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" FontSize="12">
                                <Bold>4.</Bold> Enter SSH connection details (host, port, username, path) and test the connection
                            </TextBlock>
                            
                            <TextBlock TextWrapping="Wrap" Foreground="#1976D2" FontSize="11" Margin="0,10,0,0" FontStyle="Italic">
                                üí° Tip: Use ED25519 keys (modern, fast, secure) instead of RSA keys when possible.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Expander>

                <!-- SSH Connection Settings -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Host:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding SshHost, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,5"
                             ToolTip="Hostname or IP address of the remote SSH server"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Port:" VerticalAlignment="Center"/>
                    <ui:NumberBox Grid.Row="1" Grid.Column="1" 
                                  Value="{Binding SshPort, Mode=TwoWay}" 
                                  Minimum="1" Maximum="65535" 
                                  Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Username:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             Text="{Binding SshUsername, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,5"
                             ToolTip="Username for SSH authentication on the remote server"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Destination Path:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             Text="{Binding SshDestinationPath, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Full path on the remote server where files will be transferred"/>
                </Grid>

                <!-- SSH Key Management -->
                <TextBlock Text="SSH Key Authentication" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,10,0,10"/>
                
                <!-- SSH Key Explanation -->
                <Border Background="#FFF9E6" BorderBrush="#FFA726" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" FontWeight="SemiBold" Foreground="#E65100" Margin="0,0,0,8">
                            üìå SSH Key Setup Guide
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#424242">
                            SSH uses a <Bold>key pair</Bold> for authentication:<LineBreak/>
                            ‚Ä¢ <Bold>Private Key</Bold> - Stays on THIS server (used by the service)<LineBreak/>
                            <Run Foreground="Gray" FontSize="11">  Formats: </Run><Run FontFamily="Consolas" FontSize="11">id_ed25519</Run><Run Foreground="Gray" FontSize="11">, </Run><Run FontFamily="Consolas" FontSize="11">server.key</Run><Run Foreground="Gray" FontSize="11">, </Run><Run FontFamily="Consolas" FontSize="11">private.pem</Run><LineBreak/>
                            ‚Ä¢ <Bold>Public Key</Bold> - Copy to REMOTE server's <Run FontFamily="Consolas">~/.ssh/authorized_keys</Run><LineBreak/>
                            <Run Foreground="Gray" FontSize="11">  Formats: </Run><Run FontFamily="Consolas" FontSize="11">id_ed25519.pub</Run><Run Foreground="Gray" FontSize="11">, </Run><Run FontFamily="Consolas" FontSize="11">server.pub</Run><Run Foreground="Gray" FontSize="11">, </Run><Run FontFamily="Consolas" FontSize="11">public.pem</Run>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="Gray" Margin="0,8,0,0">
                            üí° The service account needs read access to the private key file. When browsing, select the private key (commonly <Run FontFamily="Consolas">.key</Run> or <Run FontFamily="Consolas">.pem</Run> or no extension).
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Private Key File:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding SshKeyPath, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,5,0"
                             ToolTip="Path to SSH private key. Formats: OpenSSH (no extension), PEM (.pem), or Key (.key)"/>
                    <Button Grid.Row="0" Grid.Column="2" 
                            Command="{Binding BrowseSshKeyCommand}"
                            Content="Browse..."
                            ToolTip="Select the PRIVATE key file (not .pub, .crt, or .cer files)"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                               FontSize="11" 
                               Foreground="Gray"
                               Margin="150,0,0,0">
                        Examples: <Run FontFamily="Consolas">id_ed25519</Run>, <Run FontFamily="Consolas">server.key</Run>, <Run FontFamily="Consolas">zlrelay_key.pem</Run>, <Run FontFamily="Consolas">private_key</Run>
                    </TextBlock>
                    
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">
                        <Button Command="{Binding GenerateSshKeyCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Padding="15,8"
                                Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE192;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Generate Key Pair" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ViewPublicKeyCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="15,8"
                                Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE890;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="View Public Key" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding CopyPublicKeyCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C8;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Copy to Clipboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Advanced SSH Settings -->
                <Expander Header="‚öôÔ∏è Advanced SSH Settings" Margin="0,15,0,10" IsExpanded="False">
                    <Border Background="#F5F5F5" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Remote Server Type -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Remote Server Type:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Windows" 
                                                 IsChecked="{Binding IsRemoteServerWindows}" 
                                                 GroupName="ServerType"
                                                 Margin="0,0,20,0"/>
                                    <RadioButton Content="Linux" 
                                                 IsChecked="{Binding IsRemoteServerLinux}" 
                                                 GroupName="ServerType"/>
                                </StackPanel>
                                <TextBlock Text="Affects path format: Windows uses backslashes (\), Linux uses forward slashes (/)" 
                                           FontSize="11" 
                                           Foreground="Gray"
                                           Margin="0,5,0,0"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- SSH Compression -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Enable Compression:" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="2" Grid.Column="1">
                                <CheckBox IsChecked="{Binding SshCompression}"
                                          Content="Compress data during transfer"/>
                                <TextBlock Text="Can improve transfer speed for large files on slow connections" 
                                           FontSize="11" 
                                           Foreground="Gray"
                                           Margin="20,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Connection Timeout -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Connection Timeout:" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="4" Grid.Column="1">
                                <ui:NumberBox Value="{Binding SshConnectionTimeout, Mode=TwoWay}" 
                                              Minimum="10" 
                                              Maximum="300" 
                                              Width="100"
                                              HorizontalAlignment="Left"/>
                                <TextBlock Text="Seconds to wait when establishing SSH connection (default: 30)" 
                                           FontSize="11" 
                                           Foreground="Gray"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Transfer Timeout -->
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Transfer Timeout:" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="6" Grid.Column="1">
                                <ui:NumberBox Value="{Binding SshTransferTimeout, Mode=TwoWay}" 
                                              Minimum="60" 
                                              Maximum="3600" 
                                              Width="100"
                                              HorizontalAlignment="Left"/>
                                <TextBlock Text="Seconds to wait for file transfer operations (default: 300)" 
                                           FontSize="11" 
                                           Foreground="Gray"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- Strict Host Key Checking -->
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Strict Host Key Checking:" VerticalAlignment="Center"/>
                            <StackPanel Grid.Row="8" Grid.Column="1">
                                <CheckBox IsChecked="{Binding SshStrictHostKeyChecking}"
                                          Content="Verify server identity (recommended)"/>
                                <TextBlock Text="Ensures you're connecting to the expected server (disable only for testing)" 
                                           FontSize="11" 
                                           Foreground="Gray"
                                           Margin="20,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Expander>

                <!-- Connection Test -->
                <TextBlock Text="Connection Test" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,10,0,10"/>
                <Button Command="{Binding TestSshConnectionCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,10"
                        Height="38"
                        HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA46;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Test SSH Connection" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4"
                        Padding="10"
                        MinHeight="100"
                        Margin="0,10,0,0">
                    <TextBlock Text="{Binding SshTestResult}" 
                               TextWrapping="Wrap"
                               FontFamily="Consolas"
                               FontSize="12"/>
                </Border>
            </ui:SimpleStackPanel>

            <!-- SMB Configuration (Visible when SMB selected) -->
            <ui:SimpleStackPanel Spacing="10" 
                                 Margin="0,0,0,20"
                                 Visibility="{Binding IsSmbMethod, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <TextBlock Text="SMB Configuration" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Server/Share:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding SmbServer, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,5"
                             ToolTip="Network path to the SMB share (e.g., \\server\share or \\192.168.1.100\files)"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Share Path:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding SmbSharePath, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Path within the share where files will be transferred"/>
                    
                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <TextBlock Text="Credentials are managed in the Service tab" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0"/>
                        <Button Command="{Binding TestSmbConnectionCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA46;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Test Connection" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </ui:SimpleStackPanel>

            <!-- File Handling Options (Always Visible) -->
            <ui:SimpleStackPanel Spacing="10" Margin="0,0,0,20">
                <TextBlock Text="File Handling" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <CheckBox Content="Archive files after successful transfer (recommended)"
                          IsChecked="{Binding ArchiveAfterTransfer}"/>
                <CheckBox Content="Delete files after successful transfer (not recommended, use archive instead)"
                          IsChecked="{Binding DeleteAfterTransfer}"
                          Foreground="DarkOrange"/>
                <CheckBox Content="Verify file integrity after transfer"
                          IsChecked="{Binding VerifyTransfer}"/>
            </ui:SimpleStackPanel>

            <!-- Security Policies (Always Visible) -->
            <ui:SimpleStackPanel Spacing="15" Margin="0,0,0,20">
                <TextBlock Text="Security Policies" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <!-- Warning Banner -->
                <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2" CornerRadius="4" Padding="15">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold" Foreground="#E65100" Margin="0,0,0,10">
                            ‚ö†Ô∏è Important Security Notice
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Foreground="#424242" FontSize="12">
                            These settings control what types of files can be transferred. 
                            Changes directly impact system security. For DMZ deployments, 
                            keep executable files blocked unless specifically required.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Allow Executable Files -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <CheckBox Content="Allow Executable Files"
                                  IsChecked="{Binding AllowExecutableFiles}"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   Margin="20,0,0,5">
                            When enabled, allows transferring executable files (.exe, .dll, .bat, .cmd, .ps1, etc.)
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="11" 
                                   Foreground="#D32F2F"
                                   Margin="20,0,0,0">
                            ‚ö†Ô∏è Security Risk: Only enable if your workflow requires executable file transfers.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Allow Hidden Files -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <CheckBox Content="Allow Hidden Files"
                                  IsChecked="{Binding AllowHiddenFiles}"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   Margin="20,0,0,0">
                            When enabled, allows processing files with the hidden attribute set.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Maximum File Size -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Maximum File Size:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,15,0"
                                   FontWeight="SemiBold"/>
                        
                        <Slider Grid.Row="0" Grid.Column="1" 
                                Value="{Binding MaxFileSizeGB, Mode=TwoWay}"
                                Minimum="1" 
                                Maximum="100" 
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>
                        
                        <StackPanel Grid.Row="0" Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding MaxFileSizeGB, StringFormat={}{0:F0}}"
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text=" GB" 
                                       FontSize="14" 
                                       Foreground="Gray"
                                       VerticalAlignment="Center"
                                       Margin="3,0,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                   TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   Margin="0,10,0,0">
                            Maximum size for individual file transfers. Larger files will be rejected.
                        </TextBlock>

                        <!-- Quick Size Presets -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                    Orientation="Horizontal" 
                                    Margin="0,15,0,0">
                            <TextBlock Text="Quick Presets:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"
                                       FontSize="12"
                                       Foreground="Gray"/>
                            <Button Content="1 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="1"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"
                                    Margin="0,0,5,0"/>
                            <Button Content="5 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="5"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"
                                    Margin="0,0,5,0"/>
                            <Button Content="10 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="10"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"
                                    Margin="0,0,5,0"/>
                            <Button Content="20 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="20"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"
                                    Margin="0,0,5,0"/>
                            <Button Content="50 GB" 
                                    Command="{Binding SetMaxSizeCommand}"
                                    CommandParameter="50"
                                    Style="{StaticResource SecondaryButton}"
                                    Height="28" 
                                    Padding="10,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Current Security Summary -->
                <Border Background="#F5F5F5" 
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Current Security Posture" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Executable Files:" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding AllowExecutableFiles, Converter={StaticResource BoolToAllowedDeniedConverter}}" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Hidden Files:" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding AllowHiddenFiles, Converter={StaticResource BoolToAllowedDeniedConverter}}" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Max File Size:" FontSize="12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" FontSize="12" FontWeight="SemiBold">
                                <Run Text="{Binding MaxFileSizeGB, StringFormat={}{0:F0}}"/>
                                <Run Text=" GB"/>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Border>
            </ui:SimpleStackPanel>

            <!-- Save Button -->
            <Button Command="{Binding SaveConfigurationCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Padding="20,10"
                    Height="38"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Save Configuration" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <TextBlock Text="{Binding StatusMessage}" 
                       Margin="0,10,0,0" 
                       Foreground="Green"
                       TextWrapping="Wrap"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>

