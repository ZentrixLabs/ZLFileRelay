<UserControl x:Class="ZLFileRelay.ConfigTool.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:converters="clr-namespace:ZLFileRelay.ConfigTool.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    <UserControl.Resources>
        <converters:HealthStatusToColorConverter x:Key="HealthColorConverter"/>
        <converters:HealthStatusToIconConverter x:Key="HealthIconConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- Page Header -->
            <TextBlock Text="Dashboard" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="System overview and quick actions" 
                       FontSize="14" 
                       Foreground="Gray"
                       Margin="0,0,0,20"/>
            
            <!-- Overall System Health -->
            <Border Background="{DynamicResource SystemControlBackgroundAccentBrush}" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               FontFamily="Segoe MDL2 Assets"
                               Text="{Binding OverallHealthStatus, Converter={StaticResource HealthIconConverter}}"
                               FontSize="48"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="System Status" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="{Binding OverallHealthText}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>
                    
                    <Button Grid.Column="2"
                            Command="{Binding RefreshAllStatusCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Background="White"
                            Height="36"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Refresh All" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Two Column Layout -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Column: Health Status Cards -->
                <StackPanel Grid.Column="0">
                    
                    <!-- Service Health Card -->
                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15"
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       FontFamily="Segoe MDL2 Assets"
                                       Text="{Binding ServiceHealthStatus, Converter={StaticResource HealthIconConverter}}"
                                       Foreground="{Binding ServiceHealthStatus, Converter={StaticResource HealthColorConverter}}"
                                       FontSize="32"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Windows Service" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ServiceHealthText}" 
                                           Foreground="Gray"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Command="{Binding QuickStartServiceCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="0,0,5,0"
                                        Padding="10,6"
                                        Height="32">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE768;" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Start" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding QuickStopServiceCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="10,6"
                                        Height="32">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE71A;" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Stop" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Configuration Health Card -->
                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15"
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       FontFamily="Segoe MDL2 Assets"
                                       Text="{Binding ConfigurationHealthStatus, Converter={StaticResource HealthIconConverter}}"
                                       Foreground="{Binding ConfigurationHealthStatus, Converter={StaticResource HealthColorConverter}}"
                                       FontSize="32"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Configuration" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ConfigurationHealthText}" 
                                           Foreground="Gray"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- SSH Health Card -->
                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15"
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       FontFamily="Segoe MDL2 Assets"
                                       Text="{Binding SshHealthStatus, Converter={StaticResource HealthIconConverter}}"
                                       Foreground="{Binding SshHealthStatus, Converter={StaticResource HealthColorConverter}}"
                                       FontSize="32"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="SSH / Transfer" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SshHealthText}" 
                                           Foreground="Gray"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Web Portal Health Card -->
                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       FontFamily="Segoe MDL2 Assets"
                                       Text="{Binding WebPortalHealthStatus, Converter={StaticResource HealthIconConverter}}"
                                       Foreground="{Binding WebPortalHealthStatus, Converter={StaticResource HealthColorConverter}}"
                                       FontSize="32"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Web Portal" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding WebPortalHealthText}" 
                                           Foreground="Gray"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                </StackPanel>
                
                <!-- Right Column: Activity Feed & Stats -->
                <StackPanel Grid.Column="2">
                    
                    <!-- Statistics Card -->
                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Statistics" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>
                            
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="Service Uptime" 
                                           FontSize="12" 
                                           Foreground="Gray"/>
                                <TextBlock Text="{Binding ServiceUptime}" 
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                            
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="Transfers Today" 
                                           FontSize="12" 
                                           Foreground="Gray"/>
                                <TextBlock Text="{Binding TotalTransfersToday}" 
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                            
                            <StackPanel>
                                <TextBlock Text="Last Transfer" 
                                           FontSize="12" 
                                           Foreground="Gray"/>
                                <TextBlock Text="{Binding LastTransferTime}" 
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Recent Activity Card -->
                    <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="Recent Activity" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>
                            
                            <ItemsControl ItemsSource="{Binding RecentActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                                BorderThickness="0,0,0,1"
                                                Padding="0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                           FontFamily="Segoe MDL2 Assets"
                                                           Text="{Binding Icon}"
                                                           Foreground="{Binding IconColor}"
                                                           FontSize="14"
                                                           VerticalAlignment="Top"
                                                           Margin="0,2,10,0"/>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Message}"
                                                               FontSize="13"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding TimeText}"
                                                               FontSize="11"
                                                               Foreground="Gray"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- Empty state -->
                            <TextBlock Text="No recent activity"
                                       Foreground="Gray"
                                       FontStyle="Italic"
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RecentActivities.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
                
            </Grid>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>

