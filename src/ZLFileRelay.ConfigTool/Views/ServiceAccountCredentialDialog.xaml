<Window x:Class="ZLFileRelay.ConfigTool.Views.ServiceAccountCredentialDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
               Title="Service Account Credentials Required"
               Height="450"
               Width="580"
               WindowStartupLocation="CenterOwner"
               ShowInTaskbar="False"
               ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="🔐" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Service Account Credentials" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Explanation -->
        <TextBlock Grid.Row="1" 
                  TextWrapping="Wrap" 
                  Margin="0,0,0,12"
                  FontSize="12"
                  Foreground="Gray">
            The operation requires access to files that belong to the Windows Service account. 
            Please provide the credentials for the service account to continue.
        </TextBlock>

        <!-- Current Service Account Display -->
        <TextBlock Grid.Row="2" 
                  TextWrapping="Wrap" 
                  Margin="0,0,0,12"
                  FontSize="11">
            <Run FontWeight="Bold">Current Service Account:</Run>
            <Run Text="{Binding CurrentServiceAccount}"/>
        </TextBlock>

        <!-- Username Field -->
        <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="Service Account Username:" 
                      Margin="0,0,0,4" 
                      FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameTextBox" 
                    Text="{Binding Username}"
                    Height="30"/>
        </StackPanel>

        <!-- Password Field -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Password:" 
                      Margin="0,0,0,4" 
                      FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" 
                        Height="30"/>
        </StackPanel>

        <!-- Remember Checkbox -->
        <CheckBox Grid.Row="5" 
                 x:Name="RememberCheckBox"
                 Content="Remember for this session"
                 IsChecked="True"
                 Margin="0,0,0,8"/>

        <!-- Error Message -->
        <ScrollViewer Grid.Row="6" 
                     VerticalScrollBarVisibility="Auto"
                     MaxHeight="60"
                     Margin="0,0,0,8"
                     Visibility="Collapsed">
            <TextBlock x:Name="ErrorTextBlock"
                      TextWrapping="Wrap"
                      Foreground="Red"/>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,8,0,0">
            <Button Content="Cancel" 
                   IsCancel="True"
                   Width="100"
                   Height="35"
                   Margin="0,0,10,0"
                   Click="CancelButton_Click"/>
            <Button Content="OK" 
                   IsDefault="True"
                   Width="100"
                   Height="35"
                   Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
