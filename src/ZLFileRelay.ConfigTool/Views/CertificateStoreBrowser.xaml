<Window x:Class="ZLFileRelay.ConfigTool.Views.CertificateStoreBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Certificate from Certificate Store"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0" 
                   Text="Select an SSL certificate from the Windows certificate store. Only certificates with private keys are shown." 
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"/>

        <!-- Certificate List -->
        <DataGrid Grid.Row="2" 
                  x:Name="CertificatesDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  SelectionChanged="CertificatesDataGrid_SelectionChanged"
                  Margin="0,0,0,10"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="*" MinWidth="200"/>
                <DataGridTextColumn Header="Issuer" Binding="{Binding Issuer}" Width="*" MinWidth="150"/>
                <DataGridTextColumn Header="Thumbprint" Binding="{Binding Thumbprint}" Width="200"/>
                <DataGridTextColumn Header="Valid From" Binding="{Binding NotBefore, StringFormat=\{0:yyyy-MM-dd\}}" Width="100"/>
                <DataGridTextColumn Header="Valid Until" Binding="{Binding NotAfter, StringFormat=\{0:yyyy-MM-dd\}}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Selected Certificate Details -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Subject:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SubjectTextBlock" TextWrapping="Wrap" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Thumbprint:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ThumbprintTextBlock" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Valid Until:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ExpiryTextBlock" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Has Private Key:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="PrivateKeyTextBlock" Margin="0,0,0,5"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Select" 
                    x:Name="SelectButton"
                    Click="SelectButton_Click"
                    IsDefault="True"
                    MinWidth="80"
                    Margin="0,0,10,0"
                    IsEnabled="False"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click"
                    IsCancel="True"
                    MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>

