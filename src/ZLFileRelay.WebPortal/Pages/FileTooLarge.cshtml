@page
@model ZLFileRelay.WebPortal.Pages.FileTooLargeModel
@{
    ViewData["Title"] = "File Too Large";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        File Size Limit Exceeded
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">Upload Failed</h5>
                        <p class="mb-0">
                            The files you attempted to upload exceed the maximum allowed file size.
                        </p>
                    </div>

                    <div class="mt-4">
                        <h6>Current Limits:</h6>
                        <ul class="list-unstyled ms-3">
                            <li>
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <strong>Maximum file size per upload:</strong> @Model.MaxFileSizeFormatted
                            </li>
                            <li class="mt-2">
                                <i class="fas fa-info-circle text-info me-2"></i>
                                <strong>Total size attempted:</strong> @Model.AttemptedSizeFormatted
                            </li>
                        </ul>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <h6 class="alert-heading">What You Can Do:</h6>
                        <ul class="mb-0">
                            <li>Split your files into smaller batches</li>
                            <li>Upload files individually if they're very large</li>
                            <li>Contact your system administrator if you need a higher file size limit</li>
                        </ul>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.SupportEmail))
                    {
                        <div class="mt-3">
                            <p class="mb-0">
                                <i class="fas fa-envelope me-2"></i>
                                <strong>Need help?</strong> Contact support at 
                                <a href="mailto:@Model.SupportEmail">@Model.SupportEmail</a>
                            </p>
                        </div>
                    }

                    <div class="mt-4 d-flex gap-2">
                        <a href="/Upload" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Upload
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>
                            Home
                        </a>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.RequestId))
            {
                <div class="mt-3 text-muted small text-center">
                    Request ID: @Model.RequestId
                </div>
            }
        </div>
    </div>
</div>

