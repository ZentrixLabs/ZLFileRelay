@page
@model ZLFileRelay.WebPortal.Pages.LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fa-solid fa-right-to-bracket me-2"></i>Sign In to @Model.SiteName</h3>
                </div>
                <div class="card-body">
                    @if (Model.ShowEntraId)
                    {
                        <div class="mb-4">
                            <h5>Microsoft Account</h5>
                            <p class="text-muted">Sign in with your organization's Microsoft account for seamless access.</p>
                            <form method="post" asp-page-handler="MicrosoftSignIn">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fa-brands fa-microsoft me-2"></i>Sign in with Microsoft
                                </button>
                            </form>
                        </div>

                        @if (Model.ShowLocalAccounts)
                        {
                            <hr class="my-4">
                            <p class="text-center text-muted">OR</p>
                            <hr class="my-4">
                        }
                    }

                    @if (Model.ShowLocalAccounts)
                    {
                        <div>
                            <h5>Local Account</h5>
                            <p class="text-muted">Sign in with your local account credentials.</p>
                            
                            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                            {
                                <div class="alert alert-danger">
                                    <i class="fa-solid fa-circle-exclamation me-2"></i>@Model.ErrorMessage
                                </div>
                            }
                            
                            <form method="post">
                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <input asp-for="Input.Email" class="form-control" placeholder="user@example.com" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.Password" class="form-label"></label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3 form-check">
                                    <input asp-for="Input.RememberMe" class="form-check-input" />
                                    <label asp-for="Input.RememberMe" class="form-check-label"></label>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fa-solid fa-right-to-bracket me-2"></i>Sign In
                                </button>
                            </form>
                            
                            <div class="mt-3 text-center">
                                <p class="mb-0">
                                    Don't have an account? <a asp-page="/Register">Register here</a>
                                </p>
                                <p class="mb-0">
                                    <a asp-page="/ForgotPassword">Forgot your password?</a>
                                </p>
                            </div>
                        </div>
                    }

                    @if (!Model.ShowEntraId && !Model.ShowLocalAccounts)
                    {
                        <div class="alert alert-warning">
                            <i class="fa-solid fa-triangle-exclamation me-2"></i>
                            Authentication is not configured. Please contact your administrator.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

