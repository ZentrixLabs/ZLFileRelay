@page
@model ZLFileRelay.WebPortal.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fa-solid fa-user-plus me-2"></i>Create Account</h3>
                </div>
                <div class="card-body">
                    @if (!Model.RegistrationEnabled)
                    {
                        <div class="alert alert-warning">
                            <i class="fa-solid fa-triangle-exclamation me-2"></i>
                            Local account registration is not enabled. Please contact your administrator.
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(Model.StatusMessage))
                        {
                            <div class="alert alert-success">
                                <i class="fa-solid fa-circle-check me-2"></i>@Model.StatusMessage
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger">
                                <i class="fa-solid fa-circle-exclamation me-2"></i>@Model.ErrorMessage
                            </div>
                        }
                        
                        <form method="post">
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email" class="form-control" placeholder="user@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                <div class="form-text">
                                    Password must be at least 8 characters and contain:
                                    <ul class="mb-0">
                                        <li>At least one uppercase letter</li>
                                        <li>At least one lowercase letter</li>
                                        <li>At least one number</li>
                                        <li>At least one special character</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            
                            @if (Model.RequireApproval)
                            {
                                <div class="alert alert-info">
                                    <i class="fa-solid fa-circle-info me-2"></i>
                                    <strong>Note:</strong> Your account will require administrator approval before you can upload files.
                                </div>
                            }
                            
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fa-solid fa-user-plus me-2"></i>Create Account
                            </button>
                        </form>
                        
                        <div class="mt-3 text-center">
                            <p class="mb-0">
                                Already have an account? <a asp-page="/Login">Sign in here</a>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

